@model IEnumerable<StudentGroupModel>
@{
    ViewData["Title"] = "Student Groups";

}
<h1>Groups</h1>

<table class="table table-bordered">

    <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Start Date</th>
        <th>Teacher</th>
    </tr>

    @foreach (var group in Model)
    {
        <tr>
            <td><a asp-controller="StudentGroups" asp-action="Edit" asp-route-id="@group.Id">@group.Title</a></td>
            <td>@group.Status</td>
            <td>@group.StartDate</td>
            <td>
                <a asp-controller="Teachers" asp-action="Edit" asp-route-id="@group.TeacherId">
                @group.Teacher?.LastName @group.Teacher?.FirstName?[0].
                </a>
            </td>
        </tr>
    }

    <tr>
        <th>
            <div class="text-info">Total: @Model.Count()</div>
        </th>
    </tr>
</table>