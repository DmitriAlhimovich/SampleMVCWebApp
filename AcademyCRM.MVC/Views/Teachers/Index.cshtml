@model IEnumerable<TeacherModel>
@{
    ViewData["Title"] = "Teachers";

}
<h1>Teachers</h1>

<table class="table table-bordered">

    <tr>
        <th>Name</th>
        <th>Profile</th>
    </tr>

    @foreach (var teacher in Model)
    {
        <tr>
            <td><a asp-controller="Teachers" asp-action="Edit" asp-route-id="@teacher.Id">' @teacher.LastName @teacher.FirstName</a></td>
            <td><a href="@teacher.LinkToProfile" target="_blank">@teacher.LinkToProfile</a></td>
        </tr>
    }

    <tr>
        <th><div class="text-info">Total: @Model.Count()</div></th>
    </tr>
</table>
