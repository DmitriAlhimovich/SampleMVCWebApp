@model StudentModel

@{
    ViewData["Title"] = "Student " + Model.LastName;

}

@using (Html.BeginForm("Edit", "Students", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" type="text" asp-for="FirstName" required />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" type="text" asp-for="LastName" required />
    </div>
    <div class="form-group">
        <label asp-for="GroupId"></label>
        <select class="form-control" asp-for="GroupId" required>
            @foreach (var group in (List<StudentGroupModel>)ViewData["Groups"])
            {
                if (group.Id == Model.GroupId)
                {
                    <option value="@group.Id" selected>@group.Title</option>
                }
                else
                {
                    <option value="@group.Id">@group.Title</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
}
